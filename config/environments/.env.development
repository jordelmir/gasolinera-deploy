# Configuraci√≥n para Desarrollo
ENVIRONMENT=development

# Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gasolinera_db
DB_USERNAME=gasolinera_user
DB_PASSWORD=gasolinera_password
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=5000
REDIS_POOL_SIZE=10

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=gasolinera_user
RABBITMQ_PASSWORD=gasolinera_password
RABBITMQ_VIRTUAL_HOST=gasolinera_vhost

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-change-in-production-very-long-key-for-security
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800
JWT_ISSUER=gasolinera-jsm-dev

# Service URLs
AUTH_SERVICE_URL=http://localhost:8081
STATION_SERVICE_URL=http://localhost:8082
COUPON_SERVICE_URL=http://localhost:8083
RAFFLE_SERVICE_URL=http://localhost:8084
REDEMPTION_SERVICE_URL=http://localhost:8085
AD_ENGINE_SERVICE_URL=http://localhost:8086
MESSAGE_IMPROVER_SERVICE_URL=http://localhost:8087
API_GATEWAY_URL=http://localhost:8080

# Service Ports
AUTH_SERVICE_PORT=8081
STATION_SERVICE_PORT=8082
COUPON_SERVICE_PORT=8083
RAFFLE_SERVICE_PORT=8084
REDEMPTION_SERVICE_PORT=8085
AD_ENGINE_SERVICE_PORT=8086
MESSAGE_IMPROVER_SERVICE_PORT=8087
API_GATEWAY_PORT=8080

# QR Signing Configuration
QR_SIGNING_ALGORITHM=RS256
QR_TOKEN_EXPIRATION=3600
QR_PRIVATE_KEY_PATH=ops/key-management/private-key.pem
QR_PUBLIC_KEY_PATH=ops/key-management/public-key.pem

# Logging
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/gasolinera-dev.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
ACTUATOR_ENDPOINTS_ENABLED=true

# External APIs
SMS_PROVIDER_URL=https://api.sms-provider.com/dev
SMS_API_KEY=dev-sms-api-key
EMAIL_PROVIDER_URL=https://api.email-provider.com/dev
EMAIL_API_KEY=dev-email-api-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_CAPACITY=200

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_ENTRIES=1000

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true
PROFILING_ENABLED=true